                        }
                    </script>



                    <!-- üìã Danh s√°ch ph√¢n c√¥ng -->
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Danh s√°ch ph√¢n c√¥ng</h4>
                            <div class="table-responsive">
                                <table  id="assignmentTable"  class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nh√¢n vi√™n</th>
                                            <th>Email</th>
                                            <th>Chi nh√°nh</th>                                           
                                            <th>ƒê·ªãa ch·ªâ</th>
                                            <th>Ph√≤ng ban</th> 
                                            <th>Ng√†y ph√¢n c√¥ng</th>
                                            <th>H√†nh ƒë·ªông</th>
                                        </tr>
                                    </thead>
                                    <tbody>
