                                        data.forEach(dep => {
                                            const option = document.createElement('option');
                                            option.value = dep.id;             // ‚úÖ d√πng ƒë√∫ng key
                                            option.text = dep.name;           // ‚úÖ d√πng ƒë√∫ng key
